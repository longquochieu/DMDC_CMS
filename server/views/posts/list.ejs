<% include('../partials/flash') %>
<div class="card">
  <div class="card-header d-flex justify-content-between align-items-center">
    <h3 class="card-title">Danh sách Posts</h3>
    <a href="/admin/posts/new" class="btn btn-primary btn-sm">+ Thêm Post</a>
  </div>
  <div class="card-body p-0">
    <table class="table table-striped">
      <thead><tr><th>Tiêu đề</th><th>Slug</th><th>Trạng thái</th><th>Display</th><th>Scheduled</th><th>#</th></tr></thead>
      <tbody>
      <% rows.forEach(r => { %>
        <tr>
          <td><a href="/admin/posts/<%= r.id %>/edit"><%= r.title || '(chưa đặt tiêu đề)' %></a></td>
          <td><%= r.slug %></td>
          <td><span class="badge badge-<%= r.status==='published'?'success':(r.status==='scheduled'?'info':(r.status==='pending'?'warning':'secondary')) %>"><%= r.status %></span></td>
          <td><%= r.display_date || '' %></td>
          <td><%= r.scheduled_at || '' %></td>
          <td class="text-nowrap">
            <% if (['admin','editor'].includes(user.role) && r.status!=='published'){ %>
              <form method="post" action="/admin/posts/<%= r.id %>/publish" class="d-inline">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <button class="btn btn-success btn-xs">Publish</button>
              </form>
            <% } %>
            <form method="post" action="/admin/posts/<%= r.id %>/delete" class="d-inline" onsubmit="return confirm('Xoá post này?');">
              <input type="hidden" name="_csrf" value="<%= csrfToken %>">
              <button class="btn btn-danger btn-xs">Xoá</button>
            </form>
          </td>
        </tr>
      <% }) %>
      </tbody>
    </table>
  </div>
</div>
