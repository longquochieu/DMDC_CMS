<% layout('layout') %>

<form method="post" action="<%= item ? ('/admin/posts/' + item.id + '/edit') : '/admin/posts/new' %>">
  <input type="hidden" name="_csrf" value="<%= csrfToken %>">

  <div class="row">
    <!-- LEFT -->
    <div class="col-md-9">
      <div class="card mb-3">
        <div class="card-header"><strong>Thông tin cơ bản</strong></div>
        <div class="card-body">
          <div class="form-group">
            <label>Tiêu đề</label>
            <input type="text" name="title" class="form-control" value="<%= (item && item.title) || '' %>">
          </div>
          <div class="form-group mt-2">
            <label>Slug</label>
            <div class="input-group">
              <input type="text" name="slug" class="form-control" value="<%= (item && item.slug) || '' %>">
              <button type="button" class="btn btn-outline-secondary" id="slug-from-title">Tạo từ tiêu đề</button>
            </div>
          </div>
        </div>
      </div>

      <div class="card mb-3">
        <div class="card-header"><strong>Tóm tắt</strong></div>
        <div class="card-body">
          <textarea class="form-control" rows="2" name="excerpt"><%= (item && item.excerpt) || '' %></textarea>
        </div>
      </div>

      <div class="card mb-3">
        <div class="card-header"><strong>Nội dung</strong></div>
        <div class="card-body">
          <textarea name="content_html" data-quill-editor style="display:none;"><%= (item && item.content_html) || '' %></textarea>
          <div id="quill-container" data-quill-editor></div>
          <button type="button" class="btn btn-sm btn-outline-primary mt-2" data-insert-media>Chèn ảnh vào nội dung</button>
        </div>
      </div>

      <% if (error) { %>
        <div class="alert alert-danger"><%= error %></div>
      <% } %>

      <div class="mb-5"></div>
    </div>

    <!-- RIGHT -->
    <div class="col-md-3">
      <div class="card mb-3">
        <div class="card-header"><strong>Cài đặt bài viết</strong></div>
        <div class="card-body">
          <div class="form-group">
            <label>Trạng thái</label>
            <select name="status" class="form-control">
              <option value="draft" <%= item && item.status==='draft' ? 'selected' : '' %>>Draft</option>
              <option value="published" <%= item && item.status==='published' ? 'selected' : '' %>>Published</option>
              <option value="scheduled" <%= item && item.status==='scheduled' ? 'selected' : '' %>>Scheduled</option>
            </select>
          </div>
          <div class="form-group mt-2">
            <label>Display date</label>
            <input type="datetime-local" name="display_date" class="form-control" value="<%= (item && item.display_date) || '' %>">
          </div>
          <div class="form-group mt-2">
            <label>Scheduled at</label>
            <input type="datetime-local" name="scheduled_at" class="form-control" value="<%= (item && item.scheduled_at) || '' %>">
          </div>
        </div>
      </div>

      <div class="card mb-3">
        <div class="card-header"><strong>Danh mục chính</strong></div>
        <div class="card-body">
          <select name="primary_category_id" class="form-control">
            <option value="">-- None --</option>
            <% (categories||[]).forEach(c => { %>
              <option value="<%= c.id %>" <%= (item && item.primary_category_id == c.id) ? 'selected' : '' %>><%= c.title || ('#'+c.id) %></option>
            <% }) %>
          </select>
        </div>
      </div>

      <div class="card mb-3">
        <div class="card-header"><strong>Thẻ (tags)</strong></div>
        <div class="card-body">
          <input type="text" class="form-control" name="tag_ids" placeholder="nhập id, cách nhau bằng dấu phẩy" value="<%= (selectedTagIds||[]).join(',') %>">
          <small class="text-muted">Tạm thời nhập ID, sẽ làm chips sau.</small>
        </div>
      </div>

      <div class="card mb-3">
        <div class="card-header d-flex justify-content-between align-items-center">
          <strong>Ảnh đại diện</strong>
          <button class="btn btn-sm btn-outline-secondary" type="button" id="pick-featured">Chọn ảnh</button>
        </div>
        <div class="card-body">
          <input type="hidden" name="featured_media_id" id="featured_media_id" value="<%= (featured && featured.id) || '' %>">
          <div id="featured-preview">
            <% if (featured) { %>
              <img src="<%= featured.url %>" class="img-fluid border">
            <% } else { %>
              <div class="text-muted">Chưa chọn ảnh</div>
            <% } %>
          </div>
        </div>
      </div>

      <div class="card mb-3">
        <div class="card-header d-flex justify-content-between align-items-center">
          <strong>Gallery</strong>
          <button class="btn btn-sm btn-outline-secondary" type="button" id="pick-gallery">Thêm ảnh</button>
        </div>
        <div class="card-body">
          <input type="hidden" name="gallery_ids" id="gallery_ids" value="<%= (gallery||[]).map(g=>g.id).join(',') %>">
          <div id="gallery-preview" class="d-flex flex-wrap gap-2">
            <% (gallery||[]).forEach(g => { %>
              <img src="<%= g.url %>" style="height:70px" class="border">
            <% }) %>
          </div>
        </div>
      </div>

      <div class="d-grid gap-2">
        <button class="btn btn-primary" type="submit">Lưu</button>
        <a href="/admin/posts" class="btn btn-light">Huỷ</a>
      </div>
    </div>
  </div>
</form>

<script>
  // tạo slug từ title
  document.getElementById('slug-from-title')?.addEventListener('click', () => {
    const title = document.querySelector('input[name="title"]').value || '';
    const slugInput = document.querySelector('input[name="slug"]');
    const s = title
      .toLowerCase()
      .normalize('NFD').replace(/[\u0300-\u036f]/g, '')
      .replace(/[^a-z0-9]+/g, '-').replace(/^-+|-+$/g, '');
    slugInput.value = s;
  });

  // helpers
  function getCsrf(){ const m = document.querySelector('meta[name="csrf-token"]'); return m ? m.content : ''; }

  // pick featured
  document.getElementById('pick-featured')?.addEventListener('click', () => {
    if (typeof openMediaPicker !== 'function') { alert('Media picker chưa sẵn sàng'); return; }
    openMediaPicker((url, alt, meta) => {
      document.getElementById('featured_media_id').value = meta && meta.id ? meta.id : '';
      document.getElementById('featured-preview').innerHTML = url ? '<img class="img-fluid border" src="'+url+'">' : '<div class="text-muted">Chưa chọn ảnh</div>';
    }, { returnMeta: true });
  });

  // pick gallery
  document.getElementById('pick-gallery')?.addEventListener('click', () => {
    if (typeof openMediaPicker !== 'function') { alert('Media picker chưa sẵn sàng'); return; }
    openMediaPicker((url, alt, meta) => {
      const hid = document.getElementById('gallery_ids');
      const curr = hid.value ? hid.value.split(',').filter(Boolean) : [];
      if (meta && meta.id) curr.push(String(meta.id));
      hid.value = curr.join(',');
      const div = document.createElement('img');
      div.src = url; div.style.height = '70px'; div.className = 'border me-1 mb-1';
      document.getElementById('gallery-preview').appendChild(div);
    }, { returnMeta: true });
  });
</script>
