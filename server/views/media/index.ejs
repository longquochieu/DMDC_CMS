<!-- server/views/media/index.ejs -->
<section class="content">
  <div class="card">
    <div class="card-body">
      <h3 class="mb-3">Media</h3>

      <form action="/admin/media/upload" method="post" enctype="multipart/form-data">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <div class="form-group">
          <label>Chọn tệp (có thể nhiều)</label>
          <input type="file" name="file" multiple class="form-control">
        </div>
        <button class="btn btn-primary">Upload</button>
      </form>

      <hr>

      <div class="row" id="media-grid"></div>
    </div>
  </div>
</section>

<script>
document.addEventListener('DOMContentLoaded', async function() {
  const grid = document.getElementById('media-grid');
  try {
    const r = await fetch('/admin/media/list', { headers: { 'Accept': 'application/json' }});
    const { items=[] } = await r.json();
    grid.innerHTML = items.map(m => `
      <div class="col-6 col-md-3 mb-3">
        <div class="card">
          <div class="card-body text-center">
            ${m.mime_type.startsWith('image/') ? `<img src="${m.url}" style="max-width:100%;height:100px;object-fit:contain" alt="${m.original_filename}">` : `<i class="fas fa-file fa-3x"></i>`}
            <div class="small mt-2 text-truncate" title="${m.original_filename}">${m.original_filename}</div>
            <div class="text-muted small">${(m.size_bytes/1024).toFixed(0)} KB</div>
          </div>
        </div>
      </div>
    `).join('');
  } catch (e) {
    grid.innerHTML = `<div class="col-12 alert alert-danger">Không tải được danh sách media: ${e.message}</div>`;
  }
});
</script>
