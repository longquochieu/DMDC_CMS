<%- include('../partials/flash') %>
<div class="card">
  <div class="card-header d-flex justify-content-between align-items-center">
    <h3 class="card-title">Users</h3>
    <a href="/admin/users/new" class="btn btn-primary btn-sm">+ New User</a>
  </div>
  <div class="card-body">
    <form class="form-inline mb-3" method="get">
	<input type="hidden" name="_csrf" value="<%= csrfToken %>">
      <input class="form-control mr-2" type="text" name="q" placeholder="Search username/email..." value="<%= q||'' %>">
      <select class="form-control mr-2" name="role">
        <option value="">All roles</option>
        <% ['admin','editor','author','contributor'].forEach(r => { %>
          <option value="<%= r %>" <%= role===r?'selected':'' %>><%= r %></option>
        <% }) %>
      </select>
      <select class="form-control mr-2" name="status">
        <option value="">All status</option>
        <% ['active','disabled'].forEach(s => { %>
          <option value="<%= s %>" <%= status===s?'selected':'' %>><%= s %></option>
        <% }) %>
      </select>
      <button class="btn btn-secondary">Filter</button>
    </form>
    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Username</th>
            <th>Email</th>
            <th>Role</th>
            <th>Status</th>
            <th>Online</th>
            <th>Last activity</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% rows.forEach(u => { %>
            <tr>
              <td><%= u.username %></td>
              <td><%= u.email %></td>
              <td><%= u.role %></td>
              <td><%= u.status %></td>
              <td><span class="badge <%= (u.last_activity_recent?'badge-success':'badge-secondary') %>"><%= u.last_activity_recent?'Online':'Offline' %></span></td>
              <td><%= u.last_activity || '-' %></td>
              <td>
                <a class="btn btn-sm btn-outline-primary" href="/admin/users/<%= u.id %>/edit">Edit</a>
                <% if (user && user.id !== u.id) { %>
                  <% if (u.status !== 'disabled') { %>
                    <form class="d-inline" method="post" action="/admin/users/<%= u.id %>/disable">
						<input type="hidden" name="_csrf" value="<%= csrfToken %>">
						<button class="btn btn-sm btn-outline-warning">Disable</button>
					</form>
                  <% } else { %>
                    <form class="d-inline" method="post" action="/admin/users/<%= u.id %>/enable">
						<input type="hidden" name="_csrf" value="<%= csrfToken %>">
						<button class="btn btn-sm btn-outline-success">Enable</button>
					</form>
                  <% } %>
                  <form class="d-inline" method="post" action="/admin/users/<%= u.id %>/delete" onsubmit="return confirm('Delete this user?');">
					<input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <button class="btn btn-sm btn-outline-danger">Delete</button>
                  </form>
                <% } %>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>
