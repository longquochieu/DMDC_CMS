<div class="container-fluid">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h4 m-0"><%= pageTitle %></h1>
    <a href="/admin/users/new" class="btn btn-primary btn-sm">Tạo người dùng</a>
  </div>

  <% if (ok) { %><div class="alert alert-success">OK: <%= ok %></div><% } %>
  <% if (err) { %><div class="alert alert-danger">Lỗi: <%= err %></div><% } %>

  <form class="row g-2 mb-3" method="get">
    <div class="col-md-4"><input class="form-control" name="q" placeholder="Tìm tên/email" value="<%= q||'' %>"></div>
    <div class="col-md-3">
      <select class="form-select" name="role">
        <option value="">-- Vai trò --</option>
        <% ['admin','editor','author','contributor'].forEach(r => { %>
          <option value="<%= r %>" <%= role===r?'selected':'' %>><%= r %></option>
        <% }) %>
      </select>
    </div>
    <div class="col-md-3">
      <select class="form-select" name="status">
        <option value="">-- Trạng thái --</option>
        <% ['active','inactive'].forEach(s => { %>
          <option value="<%= s %>" <%= status===s?'selected':'' %>><%= s %></option>
        <% }) %>
      </select>
    </div>
    <div class="col-md-2"><button class="btn btn-outline-secondary w-100">Lọc</button></div>
  </form>

  <div class="card">
    <div class="table-responsive">
      <table class="table table-striped align-middle mb-0">
        <thead class="table-light">
          <tr>
            <th>ID</th><th>Người dùng</th><th>Email</th><th>Vai trò</th><th>Trạng thái</th><th>Last login</th><th style="width:160px;">Thao tác</th>
          </tr>
        </thead>
        <tbody>
          <% if (!rows || !rows.length) { %>
            <tr><td colspan="7" class="text-center text-muted py-4">Không có dữ liệu</td></tr>
          <% } else { rows.forEach(u => { %>
            <tr>
              <td><code><%= u.id %></code></td>
              <td>
                <div class="d-flex align-items-center gap-2">
                  <% if (u.avatar_url) { %><img src="<%= u.avatar_url %>" width="28" height="28" class="rounded-circle"/><% } %>
                  <div>
                    <div><strong><%= u.display_name || u.username %></strong></div>
                    <small class="text-muted">@<%= u.username %></small>
                  </div>
                </div>
              </td>
              <td><%= u.email %></td>
              <td><span class="badge bg-secondary text-uppercase"><%= u.role %></span></td>
              <td><span class="badge <%= u.status==='active'?'bg-success':'bg-danger' %>"><%= u.status %></span></td>
              <td><%= u.last_login || '—' %></td>
              <td class="text-end">
                <a class="btn btn-sm btn-primary" href="/admin/users/<%= u.id %>/edit">Sửa</a>
                <form method="post" action="/admin/users/<%= u.id %>/reset-password" class="d-inline">
                  <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                  <input type="hidden" name="new_password" value="changeme123">
                  <button class="btn btn-sm btn-outline-warning" onclick="return confirm('Đặt lại mật khẩu user này?')">Reset PW</button>
                </form>
              </td>
            </tr>
          <% }) } %>
        </tbody>
      </table>
    </div>
  </div>
</div>
