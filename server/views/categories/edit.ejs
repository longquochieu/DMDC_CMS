<% include('../partials/flash') %>
<form method="post">
  <input type="hidden" name="_csrf" value="<%= csrfToken %>">
  <div class="card">
    <div class="card-body">
      <div class="form-group"><label>Tên</label><input class="form-control" name="name" value="<%= item?item.name:'' %>" required></div>
      <div class="form-group"><label>Slug</label><input class="form-control" name="slug" value="<%= item?item.slug:'' %>"></div>
      <div class="form-row">
        <div class="col">
          <label>Parent</label>
          <select class="form-control" name="parent_id">
            <option value="">(Không)</option>
            <% parents.forEach(p => { %>
            <option value="<%= p.id %>" <%= item && item.parent_id===p.id ? 'selected':'' %>><%= p.name %></option>
            <% }) %>
          </select>
        </div>
        <div class="col">
          <label>Order</label>
          <input type="number" class="form-control" name="order_index" value="<%= item?item.order_index:0 %>">
        </div>
      </div>
      <% if (item) { %>
        <div class="form-group mt-3"><label>Full Path</label><div><code><%= item.full_path %></code></div></div>
      <% } %>
    </div>
    <div class="card-footer"><button class="btn btn-primary">Lưu</button> <a class="btn btn-secondary" href="/admin/categories">Huỷ</a></div>
  </div>
</form>
