<!-- server/views/partials/sidebar.ejs -->
<nav class="sidebar bg-light border-end">
  <ul class="nav flex-column py-3">

    <!-- Tổng quan -->
    <li class="nav-item">
      <a class="nav-link <%= (req.path === '/admin') ? 'active fw-bold' : '' %>" href="/admin">
        <i class="fas fa-gauge"></i> Tổng quan
      </a>
    </li>

    <!-- Trang -->
    <li class="nav-item mt-2">
      <div class="text-uppercase small text-muted px-3">Trang</div>
      <ul class="nav flex-column ms-3">
        <li class="nav-item">
          <a class="nav-link <%= req.path.startsWith('/admin/pages') && !req.path.includes('/new') && !req.path.includes('/tree') ? 'active fw-bold' : '' %>" href="/admin/pages">
            Danh sách trang
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link <%= (req.path === '/admin/pages/new') ? 'active fw-bold' : '' %>" href="/admin/pages/new">
            Tạo mới trang
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link <%= (req.path.startsWith('/admin/pages/tree')) ? 'active fw-bold' : '' %>" href="/admin/pages/tree">
            Cây trang (kéo-thả)
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link <%= (req.path.startsWith('/admin/trash') && (req.query?.tab === 'pages')) ? 'active fw-bold' : '' %>" href="/admin/trash?tab=pages">
            Trang đã xoá
          </a>
        </li>
      </ul>
    </li>

    <!-- Bài viết -->
    <li class="nav-item mt-3">
      <div class="text-uppercase small text-muted px-3">Bài viết</div>
      <ul class="nav flex-column ms-3">
        <li class="nav-item">
          <a class="nav-link <%= req.path.startsWith('/admin/categories') ? 'active fw-bold' : '' %>" href="/admin/categories">
            Danh mục bài viết
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link <%= (req.path.startsWith('/admin/posts') && !req.path.endsWith('/new')) ? 'active fw-bold' : '' %>" href="/admin/posts">
            Danh sách bài viết
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link <%= (req.path === '/admin/posts/new') ? 'active fw-bold' : '' %>" href="/admin/posts/new">
            Tạo mới bài viết
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link <%= (req.path.startsWith('/admin/posts') && req.query?.status === 'scheduled') ? 'active fw-bold' : '' %>" href="/admin/posts?status=scheduled">
            Bài viết đã lên lịch
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link <%= req.path.startsWith('/admin/tags') ? 'active fw-bold' : '' %>" href="/admin/tags">
            Thẻ (Tag)
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link <%= (req.path.startsWith('/admin/trash') && (req.query?.tab === 'posts')) ? 'active fw-bold' : '' %>" href="/admin/trash?tab=posts">
            Bài viết đã xoá
          </a>
        </li>
      </ul>
    </li>

    <!-- Media -->
    <li class="nav-item mt-3">
      <div class="text-uppercase small text-muted px-3">Media</div>
      <ul class="nav flex-column ms-3">
        <li class="nav-item">
          <a class="nav-link <%= req.path.startsWith('/admin/media') ? 'active fw-bold' : '' %>" href="/admin/media">
            Thư viện Media
          </a>
        </li>
      </ul>
    </li>

    <!-- Cài đặt -->
    <li class="nav-item mt-3">
      <div class="text-uppercase small text-muted px-3">Cài đặt</div>
      <ul class="nav flex-column ms-3">
        <li class="nav-item">
          <a class="nav-link <%= (req.path === '/admin/settings') ? 'active fw-bold' : '' %>" href="/admin/settings">
            Cài đặt chung
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link <%= req.path.startsWith('/admin/settings/seo') ? 'active fw-bold' : '' %>" href="/admin/settings/seo">
            Cài đặt SEO
          </a>
        </li>
      </ul>
    </li>

    <!-- Nhật ký -->
    <li class="nav-item mt-3">
      <div class="text-uppercase small text-muted px-3">Hệ thống</div>
      <ul class="nav flex-column ms-3">
        <li class="nav-item">
          <a class="nav-link <%= req.path.startsWith('/admin/logs') ? 'active fw-bold' : '' %>" href="/admin/logs">
            Nhật ký (Logs)
          </a>
        </li>
      </ul>
    </li>

  </ul>
</nav>
