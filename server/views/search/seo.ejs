<% /* server/views/settings/seo.ejs */ %>
<div class="card">
  <div class="card-header d-flex justify-content-between align-items-center">
    <h3 class="card-title m-0">Cài đặt SEO</h3>
    <a class="btn btn-sm btn-secondary" href="/admin/settings">← Quay lại</a>
  </div>
  <form method="post" action="/admin/settings/seo">
    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
    <div class="card-body">
      <div class="row g-4">
        <div class="col-md-6">
          <h5 class="mb-3">Chung</h5>
          <div class="mb-3">
            <label class="form-label">Tên website (Site name)</label>
            <input class="form-control" name="seo_site_name" value="<%= seo_site_name %>">
          </div>
          <div class="mb-3">
            <label class="form-label">Ký tự ngăn cách (Separator)</label>
            <input class="form-control" name="seo_title_separator" value="<%= seo_title_separator %>">
            <div class="form-text">Ví dụ: -, |, •</div>
          </div>
          <div class="row">
            <div class="col">
              <label class="form-label">Robots Index (mặc định)</label>
              <select class="form-select" name="seo_default_index">
                <option value="index"   <%= seo_default_index==='index'?'selected':'' %> >index</option>
                <option value="noindex" <%= seo_default_index==='noindex'?'selected':'' %> >noindex</option>
              </select>
            </div>
            <div class="col">
              <label class="form-label">Robots Follow (mặc định)</label>
              <select class="form-select" name="seo_default_follow">
                <option value="follow"   <%= seo_default_follow==='follow'?'selected':'' %> >follow</option>
                <option value="nofollow" <%= seo_default_follow==='nofollow'?'selected':'' %> >nofollow</option>
              </select>
            </div>
          </div>
          <div class="mb-3 mt-3">
            <label class="form-label">Robots nâng cao (mặc định)</label>
            <input class="form-control" name="seo_default_robots_advanced" value="<%= seo_default_robots_advanced %>" placeholder="noarchive,nosnippet">
          </div>
          <div class="mb-3">
            <label class="form-label">OG: Default Image URL</label>
            <input class="form-control" name="seo_default_og_image" value="<%= seo_default_og_image %>">
          </div>
        </div>

        <div class="col-md-6">
          <h5 class="mb-3">Mẫu tiêu đề & mô tả</h5>
          <div class="mb-3">
            <label class="form-label">Post Title Template</label>
            <input class="form-control" name="seo_template_post_title" value="<%= seo_template_post_title %>">
            <div class="form-text">Biến: %title% %sitename% %sep%</div>
          </div>
          <div class="mb-3">
            <label class="form-label">Post Description Template</label>
            <textarea class="form-control" name="seo_template_post_desc" rows="2"><%= seo_template_post_desc %></textarea>
          </div>

          <div class="mb-3">
            <label class="form-label">Page Title Template</label>
            <input class="form-control" name="seo_template_page_title" value="<%= seo_template_page_title %>">
          </div>
          <div class="mb-3">
            <label class="form-label">Page Description Template</label>
            <textarea class="form-control" name="seo_template_page_desc" rows="2"><%= seo_template_page_desc %></textarea>
          </div>

          <div class="mb-3">
            <label class="form-label">Category Title Template</label>
            <input class="form-control" name="seo_template_category_title" value="<%= seo_template_category_title %>">
          </div>
          <div class="mb-3">
            <label class="form-label">Category Description Template</label>
            <textarea class="form-control" name="seo_template_category_desc" rows="2"><%= seo_template_category_desc %></textarea>
          </div>
        </div>
      </div>
    </div>
    <div class="card-footer text-end">
      <button class="btn btn-primary">Lưu cài đặt</button>
    </div>
  </form>
</div>
