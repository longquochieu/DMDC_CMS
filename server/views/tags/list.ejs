<% include('../partials/flash') %>
<div class="card">
  <div class="card-header"><h3 class="card-title">Tags</h3></div>
  <div class="card-body">
    <form class="form-inline mb-3" method="post" action="/admin/tags/new">
      <input type="hidden" name="_csrf" value="<%= csrfToken %>">
      <input class="form-control mr-2" name="name" placeholder="Tên tag" required>
      <input class="form-control mr-2" name="slug" placeholder="Slug (tuỳ chọn)">
      <button class="btn btn-primary">Thêm</button>
    </form>
    <table class="table table-striped">
      <thead><tr><th>Tên</th><th>Slug</th><th>#</th></tr></thead>
      <tbody>
      <% rows.forEach(r => { %>
        <tr>
          <td><%= r.name %></td>
          <td><%= r.slug %></td>
          <td>
            <form method="post" action="/admin/tags/<%= r.id %>/delete" onsubmit="return confirm('Xoá tag này?');">
              <input type="hidden" name="_csrf" value="<%= csrfToken %>">
              <button class="btn btn-danger btn-xs">Xoá</button>
            </form>
          </td>
        </tr>
      <% }) %>
      </tbody>
    </table>
  </div>
</div>
