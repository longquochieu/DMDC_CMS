<% include('../partials/flash') %>
<form method="post">
  <input type="hidden" name="_csrf" value="<%= csrfToken %>">
  <div class="card">
    <div class="card-body">
      <div class="form-group">
        <label>Tiêu đề</label>
        <input class="form-control" name="title" value="<%= item?item.title:'' %>" required>
      </div>
      <div class="form-group">
        <label>Slug</label>
        <input class="form-control" name="slug" value="<%= item?item.slug:'' %>">
        <small class="form-text text-muted">Bỏ trống để tự sinh từ tiêu đề</small>
      </div>
      <div class="form-group">
        <label>Parent</label>
        <select class="form-control" name="parent_id">
          <option value="">(Không)</option>
          <% parents.forEach(p => { %>
            <option value="<%= p.id %>" <%= item && item.parent_id===p.id ? 'selected':'' %>><%= p.title %></option>
          <% }) %>
        </select>
      </div>
      <div class="form-row">
        <div class="col">
          <label>Status</label>
          <select class="form-control" name="status">
            <option value="draft" <%= item && item.status==='draft' ? 'selected':'' %>>draft</option>
            <option value="published" <%= item && item.status==='published' ? 'selected':'' %>>published</option>
          </select>
        </div>
        <div class="col">
          <label>Order</label>
          <input type="number" class="form-control" name="order_index" value="<%= item?item.order_index:0 %>">
        </div>
      </div>
      <div class="form-group mt-3">
        <label>Nội dung (HTML)</label>
        <textarea class="form-control" rows="8" name="content_html"><%= item?item.content_html:'' %></textarea>
      </div>
      <% if (item) { %>
        <div class="form-group">
          <label>Full Path</label>
          <div><code><%= item.full_path %></code></div>
        </div>
      <% } %>
    </div>
    <div class="card-footer">
      <button class="btn btn-primary">Lưu</button>
      <a class="btn btn-secondary" href="/admin/pages">Huỷ</a>
    </div>
  </div>
</form>
