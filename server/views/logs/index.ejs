<% include('../partials/flash') %>
<div class="card">
  <div class="card-header d-flex justify-content-between">
    <strong>Error Logs (last 200 lines)</strong>
    <form method="post" action="/admin/logs/clear" onsubmit="return confirm('Xoá toàn bộ logs?');">
      <input type="hidden" name="_csrf" value="<%= csrfToken %>">
      <button class="btn btn-danger btn-sm">Clear</button>
    </form>
  </div>
  <div class="card-body">
    <pre style="max-height: 60vh; overflow:auto;"><%= text %></pre>
  </div>
</div>
